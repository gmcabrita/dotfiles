// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "agent_ui_font_size": 17.0,
  "ui_font_weight": 400.0,
  "ui_font_size": 16.0,
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 400.0,
  "outline_panel": {
    "button": false,
  },
  "notification_panel": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
  },
  "agent_buffer_font_size": 17.0,
  "enable_language_server": true,
  "go_to_definition_fallback": "none",
  "file_scan_exclusions": [
    "node_modules",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.zig-cache",
    "**/zig-out",
  ],
  "tabs": {
    "file_icons": false,
    "git_status": true,
  },
  "preview_tabs": {
    "enabled": false,
  },
  "extend_comment_on_newline": false,
  "agent": {
    "tool_permissions": {
      "default": "allow",
    },
    "button": false,
    "inline_assistant_model": {
      "provider": "openai",
      "model": "gpt-5.2",
    },
    "default_model": {
      "provider": "openai",
      "model": "gpt-5.2h",
    },
  },
  "terminal": {
    "font_weight": 400.0,
    "button": false,
    "dock": "bottom",
    "cursor_shape": "block",
    "blinking": "off",
    "font_family": "JetBrains Mono NL",
    "font_size": 17.0,
  },
  "scrollbar": {
    "show": "always",
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true,
  },
  "on_last_window_closed": "quit_app",
  "use_autoclose": false,
  "vertical_scroll_margin": 0,
  "base_keymap": "VSCode",
  "theme": "Alabaster BG",
  "vim_mode": false,
  "project_panel": {
    "dock": "right",
    "git_status": true,
  },
  "format_on_save": "on",
  "formatter": "auto",
  "ensure_final_newline_on_save": true,
  "autosave": {
    "after_delay": { "milliseconds": 60 },
  },
  "auto_update": true,
  "ui_font_family": "JetBrains Mono NL",
  "ui_font_features": {
    "calt": false,
  },
  "buffer_font_family": "JetBrains Mono NL",
  "buffer_font_size": 17.0,
  "buffer_font_features": {
    "calt": false,
  },
  "cursor_shape": "block",
  "cursor_blink": false,
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true,
    },
  },
  "hard_tabs": false,
  "tab_size": 2,
  "hover_popover_enabled": true,
  "show_wrap_guides": null,
  "wrap_guides": [100],
  "preferred_line_length": 100,
  "remove_trailing_whitespace_on_save": true,
  "show_edit_predictions": true,
  "edit_predictions": {
    "provider": "copilot",
    "mode": "subtle",
    "enabled_in_text_threads": false,
  },
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "soft_wrap": "editor_width",
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true,
  },
  "auto_install_extensions": {
    "basher": true,
    "docker-compose": true,
    "dockerfile": true,
    "earthfile": true,
    "elixir": true,
    "erlang": true,
    "ghostty": true,
