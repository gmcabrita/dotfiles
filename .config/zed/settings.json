          "onTypeFormatting": false,
          "selectionRanges": false,
          "semanticHighlighting": false,
          "signatureHelp": false,
          "typeHierarchy": false,
          "workspaceSymbol": true,
        },
        "featuresConfiguration": {
          "inlayHint": {
            "implicitHashValue": false,
            "implicitRescue": false,
