  "languages": {
    "Git Commit": {
      "preferred_line_length": 72,
    },
    "SQL": {
      "formatter": "prettier",
      "prettier": {
        "allowed": true,
        "parser": "sql",
        "plugins": ["prettier-plugin-sql"],
        "overrides": [
          {
            "files": "*.sql",
            "options": {
              "keywordCase": "lower",
              "dataTypeCase": "lower",
              "functionCase": "lower",
            },
          },
        ],
      },
      "tab_size": 2,
    },
    "Python": {
      "tab_size": 4,
    },
    "Pkl": {
      "tab_size": 4,
    },
    "CSS": {
