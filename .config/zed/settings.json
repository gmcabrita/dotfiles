// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "tabs": {
    "file_icons": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "language_models": {
    "anthropic": {
      "version": "1"
    }
  },
  "extend_comment_on_newline": false,
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "features": {
    "copilot": true,
    "inline_completion_provider": "copilot"
  },
  "terminal": {
    "dock": "right",
    "cursor_shape": "bar"
  },
  "scrollbar": {
    "show": "always"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "use_autoclose": false,
  "vertical_scroll_margin": 0,
  "base_keymap": "VSCode",
  "theme": "Gruvbox Dark Hard",
  "vim_mode": false,
  "project_panel": {
    "dock": "right",
    "git_status": true
  },
  "format_on_save": "on",
  "formatter": "auto",
  "ensure_final_newline_on_save": true,
  "autosave": "off",
  "auto_update": true,
  "ui_font_family": "JetBrains Mono NL",
  "ui_font_features": {
    "calt": false
  },
  "buffer_font_family": "JetBrains Mono NL",
  "buffer_font_size": 16.4,
  "buffer_font_features": {
    "calt": false
  },
  "cursor_shape": "bar",
  "cursor_blink": false,
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true
    }
  },
  "hard_tabs": false,
  "tab_size": 2,
  "hover_popover_enabled": true,
  "preferred_line_length": 120,
  "remove_trailing_whitespace_on_save": true,
  "semantic_index": {
    "enabled": true
  },
  "show_inline_completions": false,
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "soft_wrap": "editor_width",
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "auto_install_extensions": {
    "cue": true,
    "docker-compose": true,
    "dockerfile": true,
    "earthfile": true,
    "elixir": true,
    "erlang": true,
    "git-firefly": true,
    "gleam": true,
    "html": true,
    "just": true,
    "log": true,
    "lua": true,
    "make": true,
    "nginx": true,
    "proto": true,
    "rainbow-csv": true,
    "ruby": true,
    "scss": true,
    "sql": true,
    "templ": true,
    "terraform": true,
    "toml": true,
    "typst": true,
    "xml": true,
    "zedokai": true,
    "zig": true
  },
  "file_types": {
    "Just": ["Justfile"]
  },
  "language_servers": ["!eslint", "..."],
  "lsp": {
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "staticcheck": true,
        "templateExtensions": ["tmpl"],
        "usePlaceholders": true,
        "analyses": {
          "shadow": true,
          "unusedvariable": true,
          "useany": true
        },
        "completeUnimported": true,
        "experimentalPostfixCompletions": true,
        "hints": {
          "assignVariableTypes": false,
          "compositeLiteralFields": false,
          "compositeLiteralTypes": false,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    },
    "next-ls": {
      "initialization_options": {
        "experimental": {
          "completions": {
            "enable": true
          }
        }
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "experimentalFeaturesEnabled": true,
        "formatter": "standard",
        "linters": ["standard"],
        "enabledFeatures": {
          "codeActions": true,
          "codeLens": true,
          "completion": true,
          "definition": true,
          "diagnostics": true,
          "documentHighlights": true,
          "documentLink": true,
          "documentSymbols": true,
          "foldingRanges": true,
          "formatting": true,
          "hover": true,
          "inlayHint": true,
          "onTypeFormatting": true,
          "selectionRanges": true,
          "semanticHighlighting": true,
          "signatureHelp": true,
          "typeHierarchy": true,
          "workspaceSymbol": true
        },
        "featuresConfiguration": {
          "inlayHint": {
            "implicitHashValue": true,
            "implicitRescue": true
          }
        },
        "indexing": {
          "excludedPatterns": ["**/spec/**/*.rb"],
          "excludedGems": []
        }
      }
    }
  },
  "languages": {
    "Ruby": {
      "format_on_save": "on",
      "language_servers": ["ruby-lsp", "!solargraph", "!rubocop", "..."]
    },
    "Go": {
      "hard_tabs": true
    },
    "Make": {
      "hard_tabs": true
    },
    "Just": {
      "hard_tabs": true
    },
    "Elixir": {
      "language_servers": ["next-ls", "!elixir-ls", "!lexical", "..."],
      "external": {
        "command": "mix",
        "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
      }
    },
    "HEEX": {
      "language_servers": ["next-ls", "!elixir-ls", "!lexical", "..."],
      "external": {
        "command": "mix",
        "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
      }
    },
    "HTML": {
      "format_on_save": "off"
    },
    "TypeScript": {
      "language_servers": ["!typescript-language-server", "!eslint", "vtsls", "..."]
    },
    "JavaScript": {
      "language_servers": ["!typescript-language-server", "!eslint", "vtsls", "..."]
    }
  }
}
