  "languages": {
    "Ruby": {
      "format_on_save": "off",
      "language_servers": [
        "ruby-lsp",
        "!solargraph",
        "!rubocop",
        "..."
      ]
    },
    "Go": {
      "hard_tabs": true
    },
    "Make": {
      "hard_tabs": true
    },
    "Just": {
      "hard_tabs": true
    },
    "Elixir": {
      "language_servers": [
        "next-ls",
        "!elixir-ls",
        "!lexical",
        "..."
      ],
      "external": {
        "command": "mix",
        "arguments": [
          "format",
          "--stdin-filename",
          "{buffer_path}",
          "-"
        ]
      }
    },
    "HEEX": {
