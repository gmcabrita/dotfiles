    "Just": ["Justfile"],
    "Elixir": ["tmp.*.erl"],
    "JSON": [".prettierrc", ".stylelintrc", ".babelrc"],
    "HTML": ["*.svg"],
  },
  "language_servers": ["!eslint", "..."],
  "lsp": {
    "expert": {
      "binary": {
        "arguments": ["--stdio"],
      },
    },
    "zls": {
      "settings": {
        "enable_build_on_save": true,
        "build_on_save_step": "check",
