{
  "language_models": {
    "anthropic": {
      "version": "1"
    }
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "features": {
    "copilot": false,
    "inline_completion_provider": "none"
  },
  "terminal": {
    "dock": "bottom"
  },
  "scrollbar": {
    "show": "always"
  },
