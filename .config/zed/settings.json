      "language_servers": ["ruby-lsp", "!steep", "!sorbet", "!solargraph", "!rubocop", "..."],
    },
    "Go": {
      "hard_tabs": true,
    },
    "Make": {
      "hard_tabs": true,
    },
    "Just": {
      "hard_tabs": true,
    },
    "Elixir": {
