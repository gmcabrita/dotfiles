// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "copilot": true
  },
  "terminal": {
    "dock": "bottom"
  },
  "base_keymap": "VSCode",
  "theme": "Gruvbox Dark Hard",
  "buffer_font_size": 16.4,
  "vim_mode": false,
  "project_panel": {
    "dock": "right",
    "git_status": true
  },
  "format_on_save": "on",
  "formatter": "language_server",
  "ensure_final_newline_on_save": true,
  "autosave": "off",
  "auto_update": true,
  "ui_font_family": "JetBrains Mono NL",
  "ui_font_features": {
    "calt": false
  },
  "buffer_font_family": "JetBrains Mono NL",
  "buffer_font_features": {
    "calt": false
  },
  "cursor_blink": false,
  "git": {
    "git_gutter": "tracked_files"
  },
  "hard_tabs": false,
  "tab_size": 2,
  "hover_popover_enabled": true,
  "preferred_line_length": 120,
  "remove_trailing_whitespace_on_save": true,
  "semantic_index": {
    "enabled": true
  },
  "show_inline_completions": true,
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "soft_wrap": "preferred_line_length",
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "auto_install_extensions": {
    "cue": true,
    "docker-compose": true,
    "dockerfile": true,
    "earthfile": true,
    "elixir": true,
    "erlang": true,
    "git-firefly": true,
    "gleam": true,
    "html": true,
    "just": true,
    "log": true,
    "lua": true,
    "make": true,
    "nginx": true,
    "rainbow-csv": true,
    "ruby": true,
    "scss": true,
    "sql": true,
    "templ": true,
    "terraform": true,
    "toml": true,
    "typst": true,
    "xml": true,
    "zig": true
  },
  "file_types": {
    "Just": [
      "Justfile"
    ]
  },
  "lsp": {
    "next-ls": {
      "initialization_options": {
        "experimental": {
          "completions": {
            "enable": true
          }
        }
      }
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "formatting": false
        }
      }
    }
  },
  "languages": {
    "Ruby": {
      "format_on_save": "off",
      "language_servers": [
        "ruby-lsp",
        "!solargraph",
        "..."
      ]
    },
    "Go": {
      "hard_tabs": true
    },
    "Make": {
      "hard_tabs": true
    },
    "Just": {
      "hard_tabs": true
    },
    "Elixir": {
      "language_servers": [
        "next-ls",
        "!elixir-ls",
        "!lexical",
        "..."
      ]
    },
    "HTML": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "TypeScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    }
  }
}
