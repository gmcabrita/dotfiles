    "label": "elixir: test suite",
    "command": "mix",
    "args": [
      "test"
    ]
  },
  {
    "label": "elixir: test file",
    "command": "mix",
    "args": [
      "test",
      "$ZED_FILE"
    ]
  },
  {
    "label": "elixir: test one",
    "command": "mix",
    "args": [
      "test",
