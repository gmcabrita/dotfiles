[
  {
    "label": "ruby: test suite",
    "command": "bin/rspec",
    "reveal": "no_focus"
  },
  {
    "label": "ruby: test file",
    "command": "bin/rspec",
    "args": ["$ZED_FILE"],
    "reveal": "no_focus"
  },
  {
    "label": "ruby: test line",
    "command": "bin/rspec",
    "args": ["$ZED_FILE:$ZED_ROW"],
    "tags": ["ruby-test"],
    "reveal": "no_focus"
  },
  {
    "label": "ruby: test file, fail fast",
    "command": "bin/rspec",
    "args": ["--fail-fast", "$ZED_FILE"],
    "reveal": "no_focus"
  },
  {
    "label": "zig: build",
    "command": "zig",
    "args": ["build"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-build"],
    "reveal": "no_focus"
  },
  {
    "label": "zig: test suite",
    "command": "zig",
    "args": ["build", "test"],
    "cwd": "$ZED_DIRNAME",
    "reveal": "no_focus"
  },
  {
    "label": "zig: test file",
    "command": "zig",
    "args": ["test", "$ZED_FILENAME"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-test"],
    "reveal": "no_focus"
  },
  {
    "label": "zig: test line",
    "command": "zig",
    "args": ["test", "$ZED_FILENAME", "--test-filter", "$ZED_SYMBOL"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-test"],
    "reveal": "no_focus"
  },
  {
    "label": "zig: run",
    "command": "zig",
    "args": ["run", "$ZED_FILENAME"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-run"],
    "reveal": "no_focus"
  }
]
