[
  {
    "label": "ruby: test suite",
    "command": "bin/rspec",
    "reveal": "no_focus"
  },
  {
    "label": "ruby: test file",
    "command": "bin/rspec",
    "args": ["$ZED_FILE"],
    "reveal": "no_focus"
  },
  {
    "label": "ruby: test line",
    "command": "bin/rspec",
    "args": ["$ZED_FILE:$ZED_ROW"],
    "tags": ["ruby-test"],
    "reveal": "no_focus"
  },
  {
    "label": "ruby: test file, fail fast",
    "command": "bin/rspec",
    "args": ["--fail-fast", "$ZED_FILE"],
    "reveal": "no_focus"
  },
  {
    "label": "zig build",
    "command": "zig",
    "args": ["build"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-build"]
  },
  {
    "label": "zig test",
    "command": "zig",
    "args": ["test", "$ZED_FILENAME", "--test-filter", "$ZED_CUSTOM_test_name"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-test"]
  },
  {
    "label": "zig run",
    "command": "zig",
    "args": ["run", "$ZED_FILENAME"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-run"]
  },
  {
    "label": "zig fmt",
    "command": "zig",
    "args": ["fmt", "$ZED_FILENAME"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-fmt"]
  },
  {
    "label": "zig build (release-safe)",
    "command": "zig",
    "args": ["build", "-Doptimize=ReleaseSafe"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-build"]
  },
  {
    "label": "zig build (release-fast)",
    "command": "zig",
    "args": ["build", "-Doptimize=ReleaseFast"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-build"]
  },
  {
    "label": "zig build run (release-safe)",
    "command": "zig",
    "args": ["build", "run", "-Doptimize=ReleaseSafe"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-build"]
  },
  {
    "label": "zig build run (release-fast)",
    "command": "zig",
    "args": ["build", "run", "-Doptimize=ReleaseFast"],
    "cwd": "$ZED_DIRNAME",
    "tags": ["zig-build"]
  }
]
