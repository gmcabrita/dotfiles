#!/usr/bin/env elixir

usage = fn ->
  IO.puts("Usage: mixx <package> <task> [args]")
  System.halt(1)
end


args = System.argv()

case args do
  [] ->
    usage.()
  [_] ->
    usage.()
  [package, task | rest_args] ->
    Mix.install([String.to_atom(package)])
    Mix.Task.run(task, rest_args)
end
